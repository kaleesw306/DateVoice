<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:elevation="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:foregroundGravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"


                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:src="@drawable/love_place" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="421dp"
        android:fadingEdgeLength="10dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/verifyedittextid"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:background="@drawable/phonenumberedittext"
                android:gravity="center"
                android:hint="Enter Valid OTP"
                android:inputType="phone"
                android:maxLength="6"
                android:maxLines="1"
                android:focusedByDefault="false"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:focusableInTouchMode="true"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textterms"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-20dp"
        android:fontFamily="@font/p"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="Terms and Condition's apply..."
        android:textColor="#4B8B3B"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="274dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/verifyid"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/animatebutt"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="verify"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>