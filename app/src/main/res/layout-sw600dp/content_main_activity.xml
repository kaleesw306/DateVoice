<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".main_activity"
    app:umanoDragView="@id/dragview"
    app:umanoScrollableView="@id/Storylist"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    app:umanoPanelHeight="100dp"
    app:umanoOverlay="true"
    app:umanoParallaxOffset="100dp"
    app:umanoShadowHeight="20dp"
    tools:showIn="@layout/app_bar_main_activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:id="@+id/relative"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            app:cardElevation="10dp"
            android:id="@+id/card_id"
            android:layout_gravity="left"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilpicid"
                    android:layout_width="128dp"
                    android:layout_height="81dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/love_kiss"
                    app:civ_border_color="#000000"
                    app:civ_border_width="1dp" />

                <EditText
                    android:id="@+id/statusid"
                    android:layout_width="243dp"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="132dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/phonenumberedittext"
                    android:focusableInTouchMode="false"
                    android:focusedByDefault="false"
                    android:hint="refreshing..."
                    android:inputType="textPersonName"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1" />

                <TextView
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="180dp"
                    android:id="@+id/statussss_id"
                    android:text="People dont play with my feelings because i cant show my attitute"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="67dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="29dp"
                    android:text=" Friends"
                    android:id="@+id/friendd_id"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="33dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="50dp"
                    android:text="0"
                    android:id="@+id/fre_num"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="67dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="92dp"
                    android:text=" Posts"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/post_num"
                    android:layout_width="33dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="111dp"
                    android:text="0"
                    android:textColor="#000000" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="178dp"
            android:text="Recent Stories"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/status_vertical_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="202dp"></androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/postcard"
    android:id="@+id/dragview"
    android:focusable="false"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="30dp">

        <TableRow
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/animatebutt">

        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="70dp">

      <TextView
          android:layout_width="wrap_content"
          android:text="Stories"
          android:gravity="center"
          android:textStyle="bold"
          android:textSize="18dp"
          android:paddingLeft="12sp"
          android:foregroundGravity="center"
          android:textColor="#000000"
          android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="70dp"
            android:gravity="center"
            android:paddingLeft="13sp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:layout_height="70dp" />

    </LinearLayout>
    <SearchView
        android:layout_width="550dp"
        android:layout_height="46dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:queryHint="Search"
        android:id="@+id/search"
        android:drawableLeft="@drawable/ic_search"
        android:background="@drawable/searchbar"
        />
        <ListView
            android:id="@+id/Storylist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"></ListView>




</LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
