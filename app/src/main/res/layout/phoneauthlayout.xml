<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:elevation="1dp"
        android:layout_gravity="center"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:src="@drawable/fourth" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="186dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:visibility="invisible"></androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_gravity="center"
        app:cardElevation="10dp"
        android:fadingEdgeLength="10dp"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="350dp"
                android:hint="Enter Your PhoneNumber"
                android:textStyle="bold"
                android:id="@+id/phonenumberedittextid"
                android:focusedByDefault="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/phonenumberedittext"
                android:maxLines="1"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:focusable="false"
                android:maxLength="10"
                android:layout_height="50dp"
                android:gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_height="90dp">
    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:elevation="10dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="30dp"

        android:layout_height="70dp">
        <com.andexert.library.RippleView
            android:background="@drawable/roundbuttonedit"
            android:id="@+id/ripple"
            android:layout_width="70dp"
            android:layout_height="70dp">
            <Button
                android:layout_width="70dp"
                android:background="@drawable/roundbuttonedit"
                android:text="1"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"

                android:id="@+id/number1id"
                android:layout_height="70dp" />
        </com.andexert.library.RippleView>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        app:cardCornerRadius="30dp"
        android:elevation="10dp"
        app:cardElevation="8dp"
        android:layout_height="70dp">
        <Button
            android:layout_width="70dp"
            android:text="2"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"

            android:id="@+id/number2id"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/roundbuttonedit"
            android:layout_height="70dp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        app:cardCornerRadius="30dp"
        android:elevation="10dp"
        app:cardElevation="8dp"
        android:layout_height="70dp">
        <Button
            android:layout_width="70dp"
            android:text="3"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"

            android:id="@+id/number3id"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/roundbuttonedit"
            android:layout_height="70dp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="90dp">
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            app:cardCornerRadius="30dp"
            android:elevation="10dp"
            app:cardElevation="8dp"
            android:layout_height="70dp">
            <Button
                android:layout_width="70dp"
                android:text="4"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"

                android:id="@+id/number4id"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@drawable/roundbuttonedit"
                android:layout_height="70dp" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            app:cardCornerRadius="30dp"
            android:elevation="10dp"
            app:cardElevation="8dp"
            android:layout_height="70dp">
            <Button
                android:layout_width="70dp"
                android:text="5"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"

                android:id="@+id/number5id"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@drawable/roundbuttonedit"
                android:layout_height="70dp" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            app:cardCornerRadius="30dp"
            android:elevation="10dp"
            app:cardElevation="8dp"
            android:layout_height="70dp">
            <Button
                android:layout_width="70dp"
                android:text="6"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"

                android:id="@+id/number6id"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@drawable/roundbuttonedit"
                android:layout_height="70dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="90dp">
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            app:cardCornerRadius="30dp"
            android:elevation="10dp"
            app:cardElevation="8dp"
            android:layout_height="70dp">
            <Button
                android:layout_width="70dp"
                android:text="7"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"

                android:id="@+id/number7id"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@drawable/roundbuttonedit"
                android:layout_height="70dp" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp"
            android:layout_height="70dp">
            <Button
                android:layout_width="70dp"
                android:text="8"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"

                android:id="@+id/number8id"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@drawable/roundbuttonedit"
                android:layout_height="70dp" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            app:cardCornerRadius="30dp"
            android:elevation="10dp"
            app:cardElevation="8dp"
            android:layout_height="70dp">
            <Button
                android:layout_width="70dp"
                android:text="9"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"

                android:id="@+id/number9id"
               android:textAlignment="center"
                android:textStyle="bold"
                android:background="@drawable/roundbuttonedit"
                android:layout_height="70dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="90dp">
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            app:cardCornerRadius="30dp"
            android:elevation="10dp"
            app:cardElevation="8dp"
            android:layout_height="70dp">

            <Button
                android:id="@+id/number0id"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/roundbuttonedit"
                android:gravity="center"
                android:shadowColor="#000000"

                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            app:cardCornerRadius="30dp"
            android:elevation="10dp"
            app:cardElevation="8dp"
            android:id="@+id/clearcardviewid"
            android:layout_height="70dp">
            <Button
                android:layout_width="70dp"
                android:text="x"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"

                android:textColor="#FF0000"
                android:id="@+id/clearid"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/roundbuttonedit"
                android:layout_height="70dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            app:cardCornerRadius="30dp"
            android:elevation="10dp"
            app:cardElevation="8dp"
            android:id="@+id/registercardview"
            android:layout_height="70dp">

            <Button
                android:id="@+id/registerid"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/roundbuttonedit"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="OK"
                android:textAlignment="center"
                android:textColor="#4b8b3b"
                android:textSize="20dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>



</LinearLayout>