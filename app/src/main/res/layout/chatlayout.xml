<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#000000"

            app:popupTheme="@style/AppTheme.NoActionBar">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/escape_id"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_chevron_left" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/prodile_id"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="71dp"
        android:src="@drawable/love_kiss"
        app:civ_border_color="#000000"
        app:civ_border_width="0.5dp" />

    <TextView
        android:id="@+id/name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/prodile_id"
        android:layout_marginStart="156dp"
        android:layout_marginTop="1dp"
        android:text="Kaleeswaran D"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/active_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_id"
        android:layout_alignParentStart="true"
        android:layout_marginStart="165dp"
        android:layout_marginTop="3dp"
        android:text="Active Now"
        android:textColor="#FFFFFF" />
</RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listviewid"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:layout_height="520dp">

    </ListView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/voicelottie"
        android:layout_width="wrap_content"
        android:layout_height="109dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="false"
        app:lottie_fileName="voice_original.json"
        app:lottie_loop="true" />
</LinearLayout>