<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="0dp"
        app:cardElevation="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="100dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                app:civ_border_width="1dp"
                android:id="@+id/profilpicid"
                android:src="@drawable/avataaars"
                app:civ_border_color="#000000"
                android:layout_height="150dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textidbold"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="   Enter your Name  *"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold"


            />

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fadingEdgeLength="10dp"
            app:cardCornerRadius="45dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/nameid"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:focusedByDefault="false"
                    android:background="@drawable/phonenumberedittext"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:hint="Ex -Alex"

                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:inputType="textPersonName"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                   />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:gravity="end"

        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="    Status must be Required  *"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold"


            />

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fadingEdgeLength="10dp"
            app:cardCornerRadius="45dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/statusid"
                    android:layout_width="330dp"
                    android:layout_height="500dp"
                    android:background="@drawable/phonenumberedittext"
                    android:focusedByDefault="false"
                    android:focusableInTouchMode="true"

                    android:gravity="center"
                    android:hint="Hey am using DateVoice..."
                    android:inputType="textPersonName"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <Button
        android:id="@+id/savebuttonid"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:background="@drawable/animatebutt"
        android:elevation="8dp"
        android:shadowDx="2"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="...Save..."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />


</LinearLayout>